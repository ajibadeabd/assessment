{
  "name": "",
  "version": "0.0.0",
  "private": true,
  "description": "A simple user tweet API built with Node.js, Express",
  "scripts": {
    "start": "node  -r dotenv/config dist/index.js",
    "start:dev": "nodemon  -r dotenv/config src/index.ts",
    "build": "rimraf dist && tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.18.3",
    "brcypt": "^1.0.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "~4.16.1",
    "express-validator": "^6.14.3",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.9.1",
    "morgan": "~1.9.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "pug": "2.0.0-beta11",
    "sequelize": "^6.28.0",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^4.6.0",
    "uuid": "^8.3.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^18.13.0",
    "@types/passport": "^1.0.11",
    "@types/passport-jwt": "^3.0.8",
    "@types/sequelize": "^4.28.14",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.0",
    "@types/yamljs": "^0.2.31",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "{src,apps,libs,test}/**/*.ts": "eslint --cache --fix",
    "**/*.{js,ts,md,yml,gql}": "prettier --write"
  },
  "exports": {
    "./models/tweet.ts": "./models/tweet.ts",
    "./models/*": "./models/*"
  }
}
